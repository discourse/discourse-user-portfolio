<div class="user-content user-portfolio">
  {{#if this.model.topics}}
    {{#load-more
      class="paginated-topics-list"
      selector=".paginated-topics-list .topic-list tr"
      action=(action "loadMore")
    }}
      {{basic-topic-list topicList=this.model showPosters=true}}
      {{conditional-loading-spinner condition=this.model.loadingMore}}
    {{/load-more}}
  {{else}}
    <div class="empty-portfolio">
      <div class="empty-portfolio-message">
        {{html-safe (theme-i18n "empty_portfolio")}}
        {{#if this.category}}
          <p>
            {{html-safe (theme-i18n "empty_portfolio_link")}}
            <a href={{this.category.url}}>
              {{this.category.name}}
            </a>
          </p>
        {{/if}}
      </div>
    </div>
  {{/if}}
</div>